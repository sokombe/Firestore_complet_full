<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16sp"
    tools:context=".MainActivity">

 <EditText
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:hint="Title"
     android:inputType="text"
     android:id="@+id/Edit_text_title"

/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="text"
        android:id="@+id/Edit_text_description"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/Save_button"
        android:onClick="saveNote"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrieve"
        android:id="@+id/retrieve_button"
        android:onClick="retrieveNote"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Description"
        android:id="@+id/update_button"
        android:onClick="updateDescription"
        />

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Delete description"
       android:id="@+id/delete_button"
       android:onClick="deleteDescription"
       />

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Delete Note"
       android:id="@+id/deleteNote_button"
       android:onClick="DeleteNote"
       />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to second "
        android:id="@+id/gotoseconde"
        android:onClick="gotosecond"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:id="@+id/data_retrieved"

        />

</LinearLayout>